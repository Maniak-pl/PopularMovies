<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:id="@+id/reviews_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/reviews_author_padding"
        android:textStyle="bold"
        tools:text="Maniak"/>

    <TextView
        android:id="@+id/reviews_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/reviews_content_padding_left"
        android:paddingRight="@dimen/reviews_content_padding_right"
        android:paddingBottom="@dimen/reviews_content_padding_bottom"
        tools:text="Nothing will beat the first film. The originality fades with most sequels..."/>

</LinearLayout>